{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Section: Register Card -->
            <div class="card">
                <div class="card-header text-center">
                    <h2>Inscription</h2>
                </div>
                <div class="card-body">
                    {{ form(registerForm) }}

                    <div class="login mt-3 text-center">
                        Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section: Google Sign-In -->
        <div class="mt-3 text-center">
            <button id="google-sign-in-btn" class="btn btn-info">
                <i class="fab fa-google"></i> S'inscrire avec Google
            </button>
        </div>

    </div>
{% endblock %}

{# Inclusion du script Google Sign-In #}
{% block javascripts %}
    <script>
        window.onload = function () {
            google.accounts.id.initialize({
                client_id: "305203962782-h9a7k49vu0gh27lt1i3bnaqq6halvkmg.apps.googleusercontent.com",
                callback: handleCredentialResponse
            });
            google.accounts.id.renderButton(
                document.getElementById("google-sign-in-btn"),
                { 
                    theme: "outline",
                    size: "large",
                    type: "standard",
                    text: "signup_with",
                    shape: "pill"
                }
            );
        };

        function handleCredentialResponse(response) {
            console.log("Encoded JWT ID token: " + response.credential);
            // Envoyez le jeton au serveur pour vérification et connexion
        }
    </script>
{% endblock %}