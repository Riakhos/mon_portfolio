                    },
                    discord: {
                        src: 'images/social-links/discord.png',
                        alt: 'Logo Discord',
                        title: 'Suivez-moi sur Discord'
                    }
                };

                platformSelect.addEventListener('change', function () {
                    const selectedPlatform = platformSelect.value;
                    if (platformData[selectedPlatform]) {
                        document.querySelector('.imgSrc').value = platformData[selectedPlatform].src;
                        document.querySelector('.imgAlt').value = platformData[selectedPlatform].alt;
                        document.querySelector('.imgTitle').value = platformData[selectedPlatform].title;
                    }
                });
            }
        });
    </script>
