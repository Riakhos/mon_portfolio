{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <!-- Section: Sidebar -->
            <div class="col-md-3">
                {% include 'account/sidebar.html.twig' %}
            </div>
            <!-- Section: Modify Password Form -->
            <div class="col-md-9">
                <h1>Modifier le mot de passe</h1>
                <form method="post" aria-label="Formulaire de modification du mot de passe">
                    <div class="mb-3">
                        <label for="current_password" class="form-label">Mot de passe actuel</label>
                        <input type="password" id="current_password" name="current_password" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="new_password" class="form-label">Nouveau mot de passe</label>
                        <input type="password" id="new_password" name="new_password" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">Confirmer le nouveau mot de passe</label>
                        <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
                    </div>
                    <div class="mt-3 text-center">
                        <button type="submit" class="btn btn-info">Modifier le mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
